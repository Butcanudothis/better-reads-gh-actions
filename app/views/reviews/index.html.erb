<div class="flex flex-col space-y-4">
  <h1 class="text-3xl font-bold">Recent reviews</h1>
  <div class="grid grid-cols-2 gap-4">
    <%# TODO: could make this a partial? %>
    <% @reviews.map do |review| %>
      <div class="card">
        <h2 class="text-xl font-bold"><%= review.title %></h2>
        <p class="text-md text-black mb-2">Review for "<%= review.book.title %>"</p>
        <p class="text-sm text-gray-500">Rating: <%= review.rating %></p>
        <p class="text-sm text-gray-500">By <%= review.user.name %></p>
        <p class="mt-4"><%= review.content %></p>
        <%= button_to "Delete", review_path(review),
          method: :delete,
          class: "mt-4 rounded-lg py-2 px-4 bg-red-600 text-white text-sm",
          data: { turbo_confirm: "Are you sure you want to delete this review?" } %>
      </div>
    <% end %>
  </div>
</div>
